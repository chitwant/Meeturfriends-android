<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/metropolis_bold"
        android:gravity="center_vertical"
        android:text="Jhon Smith"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toRightOf="@id/mName"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/mCall"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/round_app_color"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_cut_call" />

        <ImageView
            android:id="@+id/mCallCut"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/red_button_round"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_cut_call" />


    </LinearLayout>
</RelativeLayout>
