<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytCotainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/ic_user_profile_pic_new"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_collapseMode="parallax"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/metropolis_regular"
        android:text="jgldjgd"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toRightOf="@+id/ivProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWinnerChallege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/metropolis_regular"
        android:text="Time"
        android:textColor="@color/app_blue"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintLeft_toRightOf="@+id/ivProfilePic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilePic" />

    <ImageView
        android:id="@+id/ivWinnerLike"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/heart_icon_outline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWinnerChallege"
        app:tint="@color/ef_grey" />

    <TextView
        android:id="@+id/tvWinnerLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:fontFamily="@font/metropolis_regular"
        android:text="1 like"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="@+id/ivWinnerLike"
        app:layout_constraintLeft_toRightOf="@+id/ivWinnerLike"
        app:layout_constraintTop_toBottomOf="@+id/ivProfilePic"
        app:layout_constraintTop_toTopOf="@+id/ivWinnerLike" />

    <ImageView
        android:id="@+id/ivWinnerView"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_view"
        app:layout_constraintRight_toLeftOf="@+id/tvWinnerView"
        app:layout_constraintTop_toBottomOf="@+id/tvWinnerChallege"
        app:tint="@color/ef_grey" />

    <TextView
        android:id="@+id/tvWinnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/metropolis_regular"
        android:text="1 view"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWinnerChallege" />
</androidx.constraintlayout.widget.ConstraintLayout>