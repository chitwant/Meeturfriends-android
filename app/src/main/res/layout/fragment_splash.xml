<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SplashFragment">

   <ImageView
       android:id="@+id/ivLogo"
       android:layout_width="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="@dimen/_20sdp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:src="@drawable/ic_heart_logo"
       android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivSplashImage"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_80sdp"
        android:src="@drawable/ic_app_text_logo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivSplashLogoBottom"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_app_girl_boy_logo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>