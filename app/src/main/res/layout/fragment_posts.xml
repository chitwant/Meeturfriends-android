<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.profile.PostsFragment">

    <com.meetfriend.app.utilclasses.RecyclerViewEmptySupport
        android:id="@+id/recyclerViewHomePost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvNoPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Posts"             android:fontFamily="@font/metropolis_regular"

        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>